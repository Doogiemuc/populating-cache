{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "plugins": [
  ],
  "env": {
    "jest": true
  },
  "rules": {
		"no-underscore-dangle": ["off"],
		"no-plusplus": ["off"],
		"prefer-destructuring": ["off"],
		"no-await-in-loop": ["off"],
		"no-console": ["off"],					// We do output some warnings.
		"no-param-reassign": ["off"],
		"class-methods-use-this": ["off"]
  }
}
